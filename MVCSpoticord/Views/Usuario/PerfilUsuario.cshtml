@using MVCSpoticord.Models;
@{
    ViewBag.Title = "PerfilUsuario";
}

<h2>Perfil</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Username</th>
            <th scope="col">Contraseña</th>
            <th scope="col">Mail</th>
            <th scope="col">Imagen</th>
            <th scope="col">ID_Spotify</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <!--<th scope="row">ID</th>-->
            <td>@Session["Nombre"]</td>
            <td>@Session["Apellido"]</td>
            <td>@Session["Username"]</td>
            <td>@Html.ActionLink("Modificar", "ModificarContraseña", "Usuario")</td>
            <td>@Session["Mail"]</td>
            <td><img src="../imagenesUsuarios/@Session["Imagen"]" width="50" height="50" /></td>
            <td>@Session["ID_Spotify"]</td>
        </tr>
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Imagen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Grupo grupo in ViewBag.misGrupos)
        {
            <tr>
                <th scope="row">@grupo.ID</th>
                <td>@Html.ActionLink(grupo.Nombre, "ID_Grupo", "Usuario", new { id = grupo.ID }, null)</td>
                <td><img src="../imagenesGrupos/@grupo.Imagen" width="50" height="50" /></td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Usuario")
</div>